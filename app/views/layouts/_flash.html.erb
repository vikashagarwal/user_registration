<% flash.each do |key, value| %>
  <div data-notify='container' class="col-xs-4 col-sm-4 alert <%= bootstrap_class_for_flash(key) %> animated fadeInDown error_msgs" role="alert" data-notify-position='top-right' id='bootstrap_message_div'>
    <button type='button' class='close' data-dismiss='alert' style='position: absolute; right: 10px; top: 50%; margin-top: -13px; z-index: 1033;'>
      <span aria-hidden='true'>&times;</span>
      <span class='sr-only'>Close</span>
    </button>
    <span data-notify='message'><%= value.html_safe %></span>
  </div>
<% end %>
